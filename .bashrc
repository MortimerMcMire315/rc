function smile_prompt
{
	if [ "$?" -eq "0" ]; then
		SC="${GREEN}$"
	else
		#frowney
		SC="${RED}:("
	fi

	if [ $UID -eq 0 ]
	then
		#root user color
		UC="${RED}"
	else
		#normal user color
		UC="${BBLUE}"
	fi

	#hostname color
	HC="${BMAGENTA}"
	#regular color
	RC="${BWHITE}"
	#default color
	DF='\[\e[0m\]'
	PS1="[${UC}\u${RC}@${HC}\h ${RC}\W${DF}]${SC}${DF} "
}
